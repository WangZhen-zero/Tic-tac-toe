<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 背景图层 -->
    <View
        android:id="@+id/animated_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3F2FD" />

    <!-- 内容图层 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 用户中心按钮 -->
        <ImageButton
            android:id="@+id/user_center_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_user_center"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="用户中心"
            android:scaleType="center"
            app:tint="@color/black" />

        <!-- 垂直布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- 游戏标题 -->
            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小小井字棋"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="32dp"
                android:visibility="invisible" />

            <!-- 按钮区域 -->
            <Button
                android:id="@+id/start_button"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="开始游戏"
                android:textStyle="bold"
                android:backgroundTint="#3DB348"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/description_button"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="游戏介绍"
                android:textStyle="bold"
                android:backgroundTint="#0C6981"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/suggestion_button"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="玩家论坛"
                android:textStyle="bold"
                android:backgroundTint="#D04A5D"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/exit_login_button"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="退出登录"
                android:textStyle="bold"
                android:backgroundTint="#760FA6"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/exit_button"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="退出游戏"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
