<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 井字棋按钮样式 -->
    <style name="GameButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">#FFCDD2</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomDialogStyle">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">#FF5722</item> <!-- 主文本颜色 -->
        <item name="android:textColorSecondary">#757575</item> <!-- 次文本颜色 -->
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item> <!-- 自定义按钮 -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton">
        <item name="android:textColor">#FF5722</item> <!-- 按钮文字颜色 -->
        <item name="android:textSize">16sp</item> <!-- 按钮字体大小 -->
    </style>


</resources>
